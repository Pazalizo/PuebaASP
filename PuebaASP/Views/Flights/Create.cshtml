@model PuebaASP.Models.Flight

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FlightDate"></label>
        <input asp-for="FlightDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="AirportOriginId"></label>
        <input asp-for="AirportOriginId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AirportDestinationId"></label>
        <input asp-for="AirportDestinationId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PlaneId"></label>
        <input asp-for="PlaneId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CrewId"></label>
        <input asp-for="CrewId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

